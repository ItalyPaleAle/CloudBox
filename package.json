{
  "name": "@smcloudstore/builder",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "bootstrap": "npx lerna bootstrap --hoist",
    "compile": "npm run tsc",
    "tsc": "sh scripts/compile.sh",
    "test": "npm run compile && ./node_modules/.bin/_mocha",
    "tslint": "find packages/*/src -name *.ts -type f -exec './node_modules/.bin/tslint' {} \\;",
    "eslint": "./node_modules/.bin/eslint -c .eslintrc.yml .",
    "lint": "npm run tslint && npm run eslint",
    "typedoc": "./node_modules/.bin/typedoc --name SMCloudStore --out docs/ --readme README.md --target ES6 --module commonjs --mode file packages/core/src",
    "docs": "npm run typedoc",
    "prepublishOnly": "npm run test"
  },
  "author": "Alessandro Segala (ItalyPaleAle)",
  "license": "MIT",
  "homepage": "https://github.com/ItalyPaleAle/SMCloudStore",
  "dependencies": {},
  "devDependencies": {
    "@types/google-cloud__storage": "^1.7.0",
    "@types/minio": "^6.0.2",
    "@types/node": "^10.5.8",
    "coveralls": "^3.0.2",
    "digest-stream": "^2.0.0",
    "eslint": "^5.3.0",
    "istanbul": "v1.1.0-alpha.1",
    "lerna": "^3.0.2",
    "mocha": "^5.2.0",
    "mocha-lcov-reporter": "^1.3.0",
    "randomstring": "^1.1.5",
    "tslint": "^5.11.0",
    "typedoc": "^0.11.1",
    "typescript": "^3.0.1"
  }
}
